rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for user-specific collections
    match /users/{userId}/{document=**} {
      // Allow read/write access only if the user is authenticated and is accessing their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback rule for any other documents - more restrictive
    match /{document=**} {
      // Only allow if authenticated and within time limit (for backwards compatibility)
      allow read, write: if request.auth != null && request.time < timestamp.date(2025, 8, 13);
    }
  }
}