rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to user's subcollections (expenses, debts, etc.)
      match /{collection}/{document} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Temporary rule for testing - extend the expiration date
    // Remove this after proper authentication is working
    match /{document=**} {
      allow read, write: if request.auth != null || request.time < timestamp.date(2026, 12, 31);
    }
  }
}